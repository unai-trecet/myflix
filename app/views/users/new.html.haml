%section.register.container
  .row
    .span10.offset1
      = bootstrap_form_for @user, html: { class: "form-horizontal" } do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = f.text_field :full_name, label: "Full Name"
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group
          .controls
            <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button" data-key=#{ENV['STRIPE_PUBLISHABLE_KEY']} data-amount="999" data-name="Myflix Sign Up Charge" data-description="$9.99 to sign up the best video service" data-currency="usd"> </script>
